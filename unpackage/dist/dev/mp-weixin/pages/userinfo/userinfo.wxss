.home {
  width: 100%;
  height: 100vh;
  position: relative;
  z-index: 1;
  background: #F3F5F7;
}
.home .type-label {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #1B1C33;
  padding: 0 30rpx;
}
.home .about {
  padding: 0 31rpx 30rpx;
}
.home .about .type-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  font-size: 28rpx;
  background: #FFFFFF;
  margin-top: 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 16px 0px rgba(39, 50, 231, 0.04);
}
.home .about .type-list .left {
  display: flex;
  justify-content: start;
  align-items: center;
}
.home .about .type-list .left .more-icon {
  width: 28rpx;
  height: 28rpx;
  display: block;
  margin-right: 14rpx;
}
.home .about .type-list .uni-input {
  flex: 1;
  box-sizing: border-box;
  padding-left: 30rpx;
  text-align: right;
}
.home .button-style {
  width: 627rpx;
  height: 80rpx;
  background: #3974F4;
  border-radius: 40rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 80rpx;
  margin: 0 auto;
  font-size: 28rpx;
}

