.home {
  width: 100%;
  height: 100vh;
  position: relative;
  z-index: 1;
  background: #fff;
}
.home .block-num {
  width: 100%;
  height: 391rpx;
  border-radius: 10rpx;
  position: relative;
  z-index: 2;
}
.home .block-num .block-bg {
  position: absolute;
  width: 100%;
  z-index: 1;
  top: 0;
  left: 0;
}
.home .block-num .num-header {
  display: flex;
  justify-content: space-between;
  position: relative;
  z-index: 2;
  padding: 40rpx 57rpx;
  color: #fff;
}
.home .block-num .num-header .left {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.home .block-num .num-header .left .num-icon {
  width: 29rpx;
  height: 34rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
}
.home .block-num .num-header .left .num {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.home .block-num .num-header .left .num .n-text {
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  margin-right: 14rpx;
}
.home .block-num .num-header .right {
  flex-shrink: 0;
  width: 151rpx;
}
.home .block-num .num-header .right .right-icon {
  width: 100%;
}
.home .block-num .header-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 2;
  padding: 0 57rpx;
}
.home .block-num .header-bottom .h-b {
  width: 33%;
  flex-shrink: 0;
  height: 120rpx;
  text-align: center;
  color: #ffffff;
}
.home .block-num .header-bottom .h-b .h-b-tag {
  font-size: 22rpx;
  color: #F9F8F9;
}
.home .block-num .header-bottom .h-b .h-b-t {
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  font-weight: 600;
}
.home .block-num .header-bottom .border {
  border-left: 1rpx solid #7b89ff;
  border-right: 1rpx solid #7b89ff;
}
.home .list {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}
.home .list .list-title {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  margin-bottom: 20 rpx;
}
.home .list .list-title .title-icon {
  width: 40rpx;
  height: 50rpx;
}
.home .list .list-title .title {
  font-size: 32rpx;
  font-weight: 800;
  color: #373737;
  margin: 0 14rpx;
}
.home .list .list-title .tag {
  font-size: 24rpx;
  font-weight: 500;
  color: #686868;
}
.home .list .list-content {
  width: 100%;
  margin-top: 20rpx;
}
.home .list .list-content .list-c-b {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  text-align: center;
}
.home .list .list-content .list-c-b .name {
  flex-shrink: 0;
  width: 220rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.home .list .list-content .list-c-b .name .header-img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.home .list .list-content .list-c-b .name .user-name {
  font-weight: 400;
  color: #000000;
  font-size: 28rpx;
  line-height: 38rpx;
}
.home .list .list-content .list-c-b .index {
  flex-shrink: 0;
  width: 172rpx;
}
.home .list .list-content .list-c-b .num {
  flex-shrink: 0;
  width: 153rpx;
  font-size: 26rpx;
  color: #2834e8;
}
.home .list .list-content .list-bg {
  background: #f9f8f9;
}

