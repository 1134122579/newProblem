.home {
  height: 100vh;
  position: relative;
}
.home .header-bg {
  position: relative;
  z-index: -3;
  width: 100%;
  top: 0;
}
.home .about {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 31rpx;
}
.home .about .header {
  padding: 180rpx 31rpx 40rpx;
  position: relative;
  z-index: -2;
}
.home .about .header .user-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.home .about .header .user-block .user {
  display: flex;
  justify-content: start;
  align-items: center;
}
.home .about .header .user-block .user .user-name {
  padding-left: 20rpx;
  color: #FFFFFF;
}
.home .about .header .user-block .user .user-name .name-text {
  font-size: 48rpx;
}
.home .about .header .user-block .user .user-name .name-tag {
  font-size: 22rpx;
  margin-top: 10rpx;
}
.home .about .header .user-block .header-img {
  width: 187rpx;
  height: 156rpx;
  display: block;
  object-fit: cover;
}
.home .about .liststyle {
  position: relative;
  z-index: 1;
}
.home .about .liststyle::after {
  content: "";
  z-index: 1;
  display: block;
  height: 10rpx;
  width: 100%;
  background: #333;
  box-shadow: 0 5rpx 15rpx #3974F4;
  border-radius: 10rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.home .about .liststyle .content {
  position: relative;
  z-index: 1;
  width: 98%;
  background: #FFFFFF;
  margin: 0 auto;
  box-sizing: border-box;
}
.home .about .liststyle .content .content-type {
  display: flex;
  justify-content: start;
  align-items: center;
  width: 100%;
  font-size: 28rpx;
}
.home .about .liststyle .content .content-type .more-icon {
  width: 28rpx;
  height: 28rpx;
  display: block;
  margin-right: 14rpx;
}
.home .about .liststyle .content .block-list {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
}
.home .about .liststyle .content .block-list ._li {
  margin-top: 31rpx;
  width: 330rpx;
  height: 330rpx;
  flex-shrink: 0;
  border-radius: 20rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-shadow: 0px 0px 16px 0px rgba(39, 50, 231, 0.04);
}
.home .about .liststyle .content .block-list ._li .block-imagsize {
  width: 163rpx;
  height: 129rpx;
  display: block;
}
.home .about .liststyle .content .block-list ._li .title {
  font-size: 32rpx;
  margin: 20rpx 0;
}
.home .about .liststyle .content .block-list ._li .block-tag {
  font-size: 22rpx;
  color: #6A6D79;
}

