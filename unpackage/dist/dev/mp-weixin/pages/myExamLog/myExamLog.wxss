.home {
  width: 100%;
  height: 100vh;
  position: relative;
  z-index: 1;
  background: #F3F5F7;
}
.home .header-bg {
  position: relative;
  z-index: -3;
  width: 100%;
  top: 0;
}
.home .about {
  position: absolute;
  top: 180rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 31rpx;
}
.home .about .header {
  padding: 180rpx 0 40rpx;
  box-sizing: border-box;
}
.home .about .header .user-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.home .about .header .user-block .user {
  display: flex;
  justify-content: start;
  align-items: center;
}
.home .about .header .user-block .user .header-img {
  width: 40rpx;
  height: 47rpx;
  display: block;
  object-fit: cover;
}
.home .about .header .user-block .user .user-name {
  color: #FFFFFF;
  display: flex;
  align-items: flex-end;
}
.home .about .header .user-block .user .user-name .name-text {
  padding: 0 20rpx;
  font-size: 56rpx;
  line-height: 1;
}
.home .about .header .user-block .user .user-name .name-tag {
  font-size: 28rpx;
}
.home .about .header .user-block .user-icon {
  display: flex;
  justify-content: center;
  align-items: center;
}
.home .about .header .user-block .user-icon .gz {
  font-size: 28rpx;
  font-weight: 800;
  color: #FFFFFF;
}
.home .about .content {
  position: relative;
  border-radius: 20rpx;
  margin-top: -10rpx;
  padding: 31rpx;
  box-sizing: border-box;
  z-index: 1;
  width: 100%;
  background: #FFFFFF;
}
.home .about .type-list {
  display: flex;
  justify-content: start;
  align-items: center;
  width: 100%;
  font-size: 28rpx;
  background: #FFFFFF;
  margin-top: 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 16px 0px rgba(39, 50, 231, 0.04);
}
.home .about .type-list .more-icon {
  width: 28rpx;
  height: 28rpx;
  display: block;
  margin-right: 14rpx;
}
.home .uni-table-th {
  font-size: 28rpx;
  font-weight: bold;
  color: #1B1C33;
}
.home .gz-text {
  padding: 20rpx;
  border-radius: 20rpx;
  width: 80vw;
  height: 60vh;
  background: #FFFFFF;
  margin: 0 auto;
  overflow-y: auto;
}
.home .gz-text .title {
  text-align: center;
  font-size: 30rpx;
  padding: 10rpx 0;
  font-weight: 600;
}

